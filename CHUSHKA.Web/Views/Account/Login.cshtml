@model CHUSHKA.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<main class="mt-3">
    <h1 class="text-center">Login</h1>
    <hr class="bg-secondary half-width" />
    <form  asp-controller="Account" asp-action="Login" class="mx-auto half-width" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Username...">
        <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Password...">
            <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe"/>
            </div>
        </div>
        <hr class="bg-secondary" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Login</button>
        </div>
    </form>
</main>