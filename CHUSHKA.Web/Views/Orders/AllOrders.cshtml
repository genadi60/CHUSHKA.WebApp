@model CHUSHKA.Web.ViewModels.AllOrdersViewModel
@{
    ViewData["Title"] = "All Orders";
}
<main class="mt-3 mb-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr class="hr-2 bg-dark"/>
    <table class="table w-75 mx-auto table-hover">
        <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-2">Order ID</th>
            <th class="col-md-2">Customer</th>
            <th class="col-md-3">Product</th>
            <th class="col-md-3">Ordered On</th>
        </tr>
        </thead>
        <tbody>
        @{ var number = 1;}
        @foreach (var order in Model.Orders)
        {
            <tr class="row">
                <th class="col-md-1">@number</th>
                <td class="col-md-2">@order.Id</td>
                <td class="col-md-2">@order.Client</td>
                <td class="col-md-3">@order.Product</td>
                <td class="col-md-3">@order.OrderedOn</td>
            </tr>
            number++;
        }
        </tbody>
    </table>
</main>