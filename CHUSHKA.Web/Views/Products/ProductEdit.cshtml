@model CHUSHKA.Web.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit Product";
    ViewBag.Check = Model.Type;
    ViewData["check"] = "checked";
    string check = null;
    
}
<main class="mt-3 mb-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr class="hr-2 bg-dark" />
    <form asp-controller="Products" asp-action="ProductEdit" class="mx-auto half-width" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Name..." name="name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" type="number" class="form-control" min="0" step="0.1" id="price" placeholder="Price..." name="price" value="@Model.Price">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="description" rows="4" placeholder="Description..." name="description">@Model.Description</textarea>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />

        <div class="product-type-holder mt-4 d-flex justify-content-around">
            <div class="form-check form-check-inline">
                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="inlineRadio1" value="1" @{check = ViewBag.Checked != 1 ? null : (string)ViewData["check"];}@check>
                <label asp-for="Type" class="form-check-label">Food</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="inlineRadio2" value="2" @{check = ViewBag.Checked != 2 ? null : (string)ViewData["check"];}@check>
                <label asp-for="Type" class="form-check-label">Domestic</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="inlineRadio3" value="3" @{check = ViewBag.Checked != 3 ? null : (string)ViewData["check"];}@check>
                <label asp-for="Type" class="form-check-label">Health</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="inlineRadio4" value="4" @{check = ViewBag.Checked != 4 ? null : (string)ViewData["check"];}@check>
                <label asp-for="Type" class="form-check-label">Cosmetic</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="Type" class="form-check-input" type="radio" name="Type" id="inlineRadio5" value="5" @{check = ViewBag.Checked != 5 ? null : (string)ViewData["check"];}@check>
                <label asp-for="Type" class="form-check-label">Other</label>
            </div>
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
            <button type="submit" class="btn chushka-bg-color">Edit</button>
            <button type="button" onclick="javascript:history.go(-1)" class="btn chushka-bg-color">Cancel</button>
        </div>
    </form>
</main>